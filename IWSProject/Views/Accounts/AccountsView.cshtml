@model IEnumerable<IWSProject.Models.Entities.Account>

<script type="text/javascript">

    function OnButtonClick() {
        if (AccountsGridView.IsCustomizationWindowVisible()) {

            AccountsGridView.HideCustomizationWindow();
        }
        else {
            AccountsGridView.ShowCustomizationWindow();
        }
        UpdateButtonText();
    }
    function CustomizationWindowCloseUp(s, e) {
        UpdateButtonText();
    }
    function UpdateButtonText() {
        var text = AccountsGridView.IsCustomizationWindowVisible() ? "Hide" : "Show";
        btShowCustomizationWindow.SetText(text);
    }
    function OnEndCallback(s, e) {
        TrackLayout(s.cpClientLayout);
    }
    function TrackLayout(layout) {
        $("#LastLayoutAc").text(layout)
    }
</script>


@Html.Partial("ShowHideButtonPartialView")

@Html.Action("AccountsGridViewPartial")

