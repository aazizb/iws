@model IEnumerable<IWSProject.Models.Entities.Supplier>
<script type="text/javascript">

    function OnButtonClick() {
        if (SuppliersGridView.IsCustomizationWindowVisible()) {

            SuppliersGridView.HideCustomizationWindow();
        }
        else {
            SuppliersGridView.ShowCustomizationWindow();
        }
        UpdateButtonText();
    }
    function CustomizationWindowCloseUp(s, e) {
        UpdateButtonText();
    }
    function UpdateButtonText() {
        var text = SuppliersGridView.IsCustomizationWindowVisible() ? "Hide" : "Show";
        btShowCustomizationWindow.SetText(text);
    }

    function OnEndCallback(s, e) {
        TrackLayout(s.cpClientLayout);
    }
    function TrackLayout(layout) {
        $("#LastLayoutSu").text(layout)
    }
</script>

@Html.Partial("ShowHideButtonPartialView")
<div class="options">
    <div class="options-item">
        @Html.Partial("PerformancePartialView")
    </div>
</div>
