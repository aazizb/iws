@using IWSProject.Content;

@Html.DevExpress().CallbackPanel(settings =>
{
    settings.Name = "callbackPartialView";
    settings.CallbackRouteValues = new { Controller = "Resultat", Action = "CallbackPanelPartial" };

    settings.SetContent(() =>
    {
    @Html.RenderPartial("ResultatPartialView", Session["Results"]);

    ViewContext.Writer.Write("<div style='width: 100%; text-align: center; font-size: 16px; color: #5A83D0; font-weight: bold'>");
    ViewContext.Writer.Write(IWSLocalResource.Summary);
    ViewContext.Writer.Write("</div>");

    @Html.RenderPartial("IncomesAndBalancePartialView", Session["IncomesAndBalance"]);
});
    settings.ClientSideEvents.BeginCallback = "OnBeginCallback";
}).GetHtml()
